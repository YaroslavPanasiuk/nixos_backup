configuration {
  modi:                   "window";
  display-drun:           "â‹—";
  drun-display-format:    "{name}";
  font:                   "CaskaydiaCove Nerd Font Mono 13";
  show-icons:             true;
}

@theme "~/.cache/wal/colors-rofi.rasi"

* {
  alt:                    @selected-active-background;
  rad:                    8px;
  background-color:       @transparent-background;
  text-color:             @foreground;
}

window {  
  max-width: 60%;

  border: 2px;
  border-color: @alt;
  border-radius: 13px;
  padding: 0ch;
}

mainbox {
    children:               [ listview ];
    padding:                20px;
  horizontal-align:       0.5;

    spacing:                20px;

}

inputbar {
    display: false;
}

prompt, entry {
    display: false;
}

listview {
    layout:                 vertical;
    lines: 2;
    columns: 30;
    cycle:                  true;
}

element {
    orientation:            vertical;
    padding:                0px;
    width: 100px;
    spacing: 1em;
    border-radius:          @rad;
    
}

element-text { 
    expand: false; 
    font: "CaskaydiaCove Nerd Font Mono 10";
}

scrollbar {
    width: 0px;
    border: 0;
    handle-width: 0px;
    padding: 0;
}

element-text, element-icon {
    horizontal-align:       0.5;
    background-color:       inherit;
}

element-text { expand: true; }
element-icon { size: 50px; }

listview, element, element selected, element-text, element-icon {
    cursor:                 pointer;
}

entry {
    cursor:                 text;
}

element-text selected {
    text-color: @background;
}

element selected{
    background-color: @selected-urgent-background;
}


   
